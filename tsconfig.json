{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "CommonJS",
    "declaration": false,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}